<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.print_status.PrintStatusFragment">

    <TextView
        android:id="@+id/label_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/connected_to"
        app:layout_constraintBottom_toTopOf="@id/label_state"
        app:layout_constraintEnd_toStartOf="@id/text_host"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="127.0.0.1:8080"
        app:layout_constraintBottom_toTopOf="@id/text_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_host"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/label_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/state"
        app:layout_constraintBottom_toTopOf="@id/label_file"
        app:layout_constraintEnd_toStartOf="@id/text_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_host" />

    <TextView
        android:id="@+id/text_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Printing"
        app:layout_constraintBottom_toTopOf="@id/text_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_state"
        app:layout_constraintTop_toBottomOf="@id/text_host" />



    <TextView
        android:id="@+id/label_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/file"
        app:layout_constraintBottom_toTopOf="@id/label_message"
        app:layout_constraintEnd_toStartOf="@id/text_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_state" />

    <TextView
        android:id="@+id/text_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="bigfile.gcode"
        app:layout_constraintBottom_toTopOf="@id/text_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_file"
        app:layout_constraintTop_toBottomOf="@id/text_state" />



    <TextView
        android:id="@+id/label_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Message:"
        app:layout_constraintBottom_toTopOf="@id/label_timelapse"
        app:layout_constraintEnd_toStartOf="@id/text_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_file" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Some message"
        app:layout_constraintBottom_toTopOf="@id/text_timelapse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_message"
        app:layout_constraintTop_toBottomOf="@id/text_file" />


    <TextView
        android:id="@+id/label_timelapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/timelapse"
        app:layout_constraintBottom_toTopOf="@id/label_approx_total_time"
        app:layout_constraintEnd_toStartOf="@id/text_timelapse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_message" />

    <TextView
        android:id="@+id/text_timelapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="-"
        app:layout_constraintBottom_toTopOf="@id/text_approx_total_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_timelapse"
        app:layout_constraintTop_toBottomOf="@id/text_message" />


    <TextView
        android:id="@+id/label_approx_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/approx_total_print_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_approx_total_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_timelapse" />

    <TextView
        android:id="@+id/text_approx_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_approx_total_time"
        app:layout_constraintTop_toBottomOf="@id/text_timelapse" />

</androidx.constraintlayout.widget.ConstraintLayout>