<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temperatures.TemperaturesFragment">

    <EditText
        android:id="@+id/editText_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/temperatures_zero_temp_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_hotend" />

    <TextView
        android:id="@+id/hotend_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_default_temp_placeholder"
        android:paddingTop="@dimen/temperatures_top_padding"
        android:textSize="@dimen/temperatures_placeholder_text_size"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plate_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_default_temp_placeholder"
        android:paddingTop="@dimen/temperatures_top_padding"
        android:textSize="@dimen/temperatures_placeholder_text_size"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/hotend_target" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_target_temp_label"
        android:textSize="@dimen/temperatures_label_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/plate_temp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_target_temp_label"
        android:textSize="@dimen/temperatures_label_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/hotend_temp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plate_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_default_temp_placeholder"
        android:paddingTop="@dimen/temperatures_top_padding"
        android:textSize="@dimen/temperatures_placeholder_text_size"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/hotend_temp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_heated_plate_label"
        android:textSize="@dimen/temperatures_label_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_hotend_label"
        android:textSize="@dimen/temperatures_label_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hotend_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_default_temp_placeholder"
        android:paddingTop="@dimen/temperatures_top_padding"
        android:textSize="@dimen/temperatures_placeholder_text_size"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_hotend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/temperatures_zero_temp_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button_set_hotend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_set_hotend_temp_button_label"
        app:layout_constraintStart_toEndOf="@+id/editText_hotend"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button_set_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/temperatures_default_margin"
        android:layout_marginTop="@dimen/temperatures_default_margin"
        android:text="@string/temperatures_set_plate_temp_button_label"
        app:layout_constraintStart_toEndOf="@+id/editText_plate"
        app:layout_constraintTop_toBottomOf="@+id/button_set_hotend" />
</androidx.constraintlayout.widget.ConstraintLayout>